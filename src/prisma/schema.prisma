generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Box {
  id    Int      @id @default(autoincrement())
  items Item[]
  tags  String[]
}

model Item {
  id     Int    @id @default(autoincrement())
  name   String
  amount Int

  box   Box @relation(fields: [boxId], references: [id])
  boxId Int
}
